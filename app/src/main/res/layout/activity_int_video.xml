<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/vec"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish Alphabets"
        android:id="@+id/ib1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conjugate &apos;AR&apos;, &apos;ER&apos; and &apos;IR&apos; verbs"
        android:id="@+id/ib2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib3"
        android:layout_gravity="center_horizontal"
        android:text="Basic Spanish: Lesson 1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Spanish: Lesson 2"
        android:id="@+id/ib4"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Spanish: Lesson 3"
        android:id="@+id/ib5"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Spanish: Lesson 4"
        android:id="@+id/ib6"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Spanish: Lesson 5"
        android:id="@+id/ib7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Spanish: Lesson 6"
        android:id="@+id/ib8"
        android:layout_gravity="center_horizontal" />

</LinearLayout>